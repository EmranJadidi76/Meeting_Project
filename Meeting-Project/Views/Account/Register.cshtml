
@{ 
    Layout = "_Login";
}

<div class="wrapper-page">
    <div class="text-center">
        <a href="index.html" class="logo"><span><span>جلسه</span></span></a>
        <h5 class="text-muted m-t-0 font-600">مدیریت جلسه ها</h5>
    </div>
    <div class="m-t-40 card-box">
        <div class="text-center">
            <h4 class="text-uppercase font-bold m-b-0">ثبت نام</h4>
        </div>
        <div class="panel-body">
            <form class="form-horizontal m-t-20" action="/Account/Register" method="post">


                <div class="form-group ">
                    <div class="col-xs-6">
                        <input class="form-control" name="FirstName" type="text" required="" placeholder="نام">
                    </div>
                    <div class="col-xs-6">
                        <input class="form-control" name="LastName" type="text" required="" placeholder="نام خانوادگی">
                    </div>
                </div>

                <div class="form-group ">
                    <div class="col-xs-12">
                        <input class="form-control" name="NationalCode" type="number" required="" placeholder="کد ملی">
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-xs-12">
                        <input class="form-control" name="Password" type="password" required="" placeholder="رمز عبور">
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-xs-12">
                        <input class="form-control" name="RePassword" type="password" required="" placeholder="تکرار رمز عبور">
                    </div>
                </div>

                <div class="form-group text-center m-t-40">
                    <div class="col-xs-12">
                        <button class="btn btn-custom btn-bordred btn-block waves-effect waves-light" type="submit">
                            ثبت نام
                        </button>
                    </div>
                </div>

            </form>

        </div>

        <div class="row">
            <div class="col-sm-12 text-center">
                <p class="text-muted">اکانت کاربری داری?<a href="/Account/Login" class="text-primary m-l-5"><b>وارد شو</b></a></p>
            </div>
        </div>

    </div>
    <!-- end card-box -->

</div>